<% layout('navboil') %> 

<div class="container">
   <div class="row">
     <div class="col col-12 col-md-8 ml-5">

       <br><br>



     <br><hr>
  <h2> Register as admin  </h2>
  <hr>
  
  <% if (hasErrors) { %>
     
    <% for(var i = 0; i< messages.length; i++ ) {%>
        <div class="alert alert-danger alert-dismissible">
          <a href="#" class="close" data-dismiss="alert">&times;
            </a>
            <%= messages[i] %>

          </div>
  <% }  %>

<% } %>

 
  <br>
  <form action="/admin-signup" method="POST">
    <div class="form-group">
      <label for="admincode">AdminIDCode:</label>
      <input type="text" class="form-control" id="usr" name="admincode">
    </div>
   
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="usr" name="email">
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" class="form-control" id="pwd" name="password">
    </div>
    <div class="form-group">
      <label for="pwd">Confirm Password:</label>
      <input type="password" class="form-control" id="pwd" name="password2">
    </div>

    <!--
    <div class="form-group">
      <label for="pwd">Profile Image:</label>
      <input type="file" class="form-control" id="pwd" name="profileimage">
    </div>
    -->
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>





</div>
